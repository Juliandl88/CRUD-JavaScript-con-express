<%- include ../layouts/cabecera.ejs %> 


      <br>
      <a class="btn btn-primary" href="/libros/crear">Crear un nuevo libro</a>
      <br>
      

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for( let libro = 0; libro < libros.length; libro++ ) { %>

          <tr>
            <td><%=libros[libro].id %></td>
            <td><%=libros[libro].nombre %></td>
            <td><%=libros[libro].imagen %></td>
            <td>Editar | Borrar</td>
          </tr>

          <% } %>
        </tbody>
      </table>

